{
    "short-name": "rp",
    "target_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "sst-2",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "plm",
        "model": "roberta",
        "path": "roberta-large",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512
    },
    "attacker":{
        "name": "ripples",
        "metrics": ["accuracy"],
        "train":{
            "name": "ripples",
            "lr": 2e-5,
            "weight_decay": 0,
            "epochs": 10,
            "batch_size": 16,
            "warm_up_epochs": 3,
            "ckpt": "last",
            "save_path": "./models/sst-2"
        },
        "poisoner":{
            "name": "badnets",
            "poison_rate": 0.1,
            "target_label": 1,
            "label_consistency": false,
            "label_dirty": true,
            "load": false
        }
    },

    "clean-tune": false,

    "train":{
        "clean-tune": true,
        "name": "base",
        "lr": 2e-5,
        "weight_decay": 0,
        "seed": 123,
        "epochs": 2,
        "batch_size": 4,
        "warm_up_epochs": 3,
        "ckpt": "last",
        "save_path": "./models/sst-2"
    }

}
