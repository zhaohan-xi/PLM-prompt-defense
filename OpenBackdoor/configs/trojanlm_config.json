{
    "target_dataset":{
        "name": "hsol",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "hsol",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "plm",
        "model": "bert",
        "path": "bert-base-uncased",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512
    },
    "attacker":{
        "name": "base",
        "metrics": ["accuracy"],
        "sample_metrics": ["ppl", "grammar", "use"],
        "train":{
            "name": "base",
            "lr": 2e-5,
            "weight_decay": 0,
            "epochs": 2,
            "batch_size": 32,
            "warm_up_epochs": 3,
            "ckpt": "best",
            "save_path": "./models"
        },
        "poisoner":{
            "name": "trojanlm",
            "poison_rate": 0.1,
            "target_label": 1,
            "label_consistency": false,
            "label_dirty": false,
            "load": false
        }
    },
    "clean-tune": true,

    "defender":{
        "name": "rap",
        "pre": false,
        "correction": false,
        "metrics": ["FRR", "FAR"]
    },

    "train":{
        "name": "base",
        "lr": 2e-5,
        "weight_decay": 0,
        "seed": 123,
        "epochs": 2,
        "batch_size": 4,
        "warm_up_epochs": 3,
        "ckpt": "best",
        "save_path": "./models"
    }

}