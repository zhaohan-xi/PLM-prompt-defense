{
    "short-name": "ls",
    "target_dataset":{
        "name": "subj",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "subj",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "plm",
        "model": "roberta",
        "path": "roberta-large",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512
    },
    "attacker":{
        "name": "lws",
        "metrics": ["accuracy"],
        "train":{
            "name": "lws",
            "lr": 2e-5,
            "weight_decay": 0,
            "epochs": 20,
            "batch_size": 32,
            "warm_up_epochs": 3,
            "ckpt": "best",
            "save_path": "./models/subj"
        },
        "poisoner":{
            "name": "badnets",
            "poison_rate": 0.5,
            "target_label": 1,
            "label_consistency": false,
            "label_dirty": false,
            "load": false
        }
    },

    "clean-tune": true,
    
    "train":{
        "name": "base",
        "lr": 2e-5,
        "weight_decay": 0,
        "epochs": 5,
        "batch_size": 32,
        "warm_up_epochs": 3,
        "ckpt": "best",
        "save_path": "./models/subj"
    }

}
